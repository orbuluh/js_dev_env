SCRIPT_FILE="$0"

check_variable() {
  local ENV_VAR_NAME="$1"
  local RED='\033[0;31m'
  local NC='\033[0m' # No Color

  # Check if the environment variable is defined
  if [[ -z "${!ENV_VAR_NAME}" ]]; then
    echo -e "${RED}Error: ${ENV_VAR_NAME} is not defined. Abort sourcing file ${SCRIPT_FILE} ${NC}"
    return 1
  fi
}

